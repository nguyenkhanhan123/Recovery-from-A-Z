<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:orientation="vertical">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_list"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:gravity="center"
                android:text="@string/app_name2"
                android:textColor="@color/strong_blue"
                android:textSize="22sp"
                tools:ignore="HardcodedText"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/bold"/>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="25dp"
            app:cardElevation="25dp"
            >

            <TableRow
                android:id="@+id/tr_recovery_img"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="#FF4040"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="7dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_picture"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="8"
                    android:gravity="start|center"
                    android:text="Khôi phục ảnh"
                    android:textColor="@color/strong_blue"
                    android:textSize="24sp"
                    tools:ignore="HardcodedText" />
            </TableRow>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="25dp"
            app:cardElevation="25dp"
            >
            <TableRow
                android:id="@+id/tr_recovery_video"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="#FF8C69"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:src="@drawable/ic_video"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:gravity="start|center"
                    android:text="Khôi phục video"
                    android:textColor="@color/strong_blue"
                    android:textSize="24sp"
                    tools:ignore="HardcodedText"
                    android:layout_marginStart="10dp"/>
            </TableRow>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/tr_recovery_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="25dp"
            app:cardElevation="25dp"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="#39D82D"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_margin="7dp"
                        android:src="@drawable/ic_folder"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:gravity="start|center"
                    android:text="Khôi phục tệp tin"
                    android:textColor="@color/strong_blue"
                    android:textSize="24sp"
                    tools:ignore="HardcodedText"
                    android:layout_marginStart="10dp"/>
            </TableRow>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            app:cardElevation="25dp"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="#2BB5FF"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_margin="7dp"
                        android:src="@drawable/ic_file_completed"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:gravity="start|center"
                    android:text="Dữ liệu đã khôi phục"
                    android:textColor="@color/strong_blue"
                    android:textSize="24sp"
                    tools:ignore="HardcodedText"
                    android:layout_marginStart="10dp"/>
            </TableRow>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/grey"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_group"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_logo"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/splash"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/strong_blue"
                android:textSize="19sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_back"
                tools:ignore="ContentDescription" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_star"
                tools:ignore="ContentDescription"
                android:layout_marginStart="10dp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:gravity="start|center"
                android:text="Đánh giá ứng dụng"
                android:textColor="@color/strong_blue"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_marginStart="10dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_share"
                tools:ignore="ContentDescription"
                android:layout_marginStart="10dp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:gravity="start|center"
                android:text="Chia sẻ ứng dụng"
                android:textColor="@color/strong_blue"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_marginStart="10dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_shield"
                tools:ignore="ContentDescription"
                android:layout_marginStart="10dp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:gravity="start|center"
                android:text="Chính sách bảo mật"
                android:textColor="@color/strong_blue"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_marginStart="10dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_language"
                tools:ignore="ContentDescription"
                android:layout_marginStart="10dp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:gravity="start|center"
                android:text="Đổi ngôn ngữ"
                android:textColor="@color/strong_blue"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_marginStart="10dp"/>
        </TableRow>
    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>